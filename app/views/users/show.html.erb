<%= render 'shared/flash_message' %>
<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <div class="signup-after">
      <br>
      <h4>ユーザー情報</h4>
      <hr>
      <h5><% concat("譲渡希望") if current_user.kind == "seller" %></h5>
      <h5><% concat("買収希望")  if current_user.kind == "buyer" %></h5>
      <h5>ユーザー：<%= @user.fname %><%= @user.gname %></h5>    
      <h5>メールアドレス：<%= @user.email %></h5>
      <hr>
      <%= link_to "編集", edit_user_registration_path(current_user), class: "btn btn-primary" %>
      <%= link_to "削除", {:controller => "users/registrations", :action => "destroy"}, method: :delete, data: {confirm: '本当に削除しますか？'}, class: "btn btn-primary" %>
    </div>
  <div class="col-md-3">
  </div>
</div>

