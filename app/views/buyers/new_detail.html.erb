  　        <div class="col-md-1">
  　        </div>
  　        <div class="col-md-10">
              <%= f.label :busi_about2, "概要"%>
              <%= f.text_area :busi_about2, class: 'form-control' %>
  　          <br>
              <div class="row">
       　        <div class="col-md-8">
       　          <%= f.label :busi_goods2, "主な商品・サービス" %>
                  <%= f.text_area :busi_goods2, class: 'form-control' %>
       　        </div>
       　        <div class="col-md-4">
       　          <%= f.label :busi_sales2, "年間売上高" %>
                  <%= f.text_field :busi_sales2, class: 'form-control' %>
      　         </div>
    　         </div>
      　         <br>
    　          <%= f.label :busi_stro2, "事業の強み" %>
                <%= f.text_area :busi_stro2, class: 'form-control' %>
    　          <br>
    　          <%= f.label :busi_weak2, "事業の弱み" %>
                <%= f.text_area :busi_weak2, class: 'form-control' %>
                <br>    
    　       </div>
            <div class="col-md-1">
            </div>
          </div>
        
          <hr class="input-hr">
            <%= f.label :busi_name3, "事業名"%>
            <%= f.text_field :busi_about3, class: 'form-control' %>
          <br>
          <div class="row">
  　        <div class="col-md-1">
  　        </div>
  　        <div class="col-md-10">
              <%= f.label :busi_about3, "概要"%>
              <%= f.text_area :busi_about3, class: 'form-control' %>
  　          <br>
              <div class="row">
       　        <div class="col-md-8">
       　          <%= f.label :busi_goods3, "主な商品・サービス" %>
                  <%= f.text_area :busi_goods3, class: 'form-control' %>
       　        </div>
       　        <div class="col-md-4">
       　          <%= f.label :busi_sales3, "年間売上高" %>
                  <%= f.text_field :busi_sales3, class: 'form-control' %>
      　         </div>
    　         </div>
    　         <br>
  　          <%= f.label :busi_stro3, "事業の強み" %>
              <%= f.text_area :busi_stro3, class: 'form-control' %>
  　          <br>
  　          <%= f.label :busi_weak3, "事業の弱み" %>
              <%= f.text_area :busi_weak3, class: 'form-control' %>
              <br>    
            </div>
            <div class="col-md-1">
  　        </div>
          </div>
        </section>
      </div>
    </div>
    <br>
    <%= double_submit_token %>
    <%= f.submit "登録", class: "btn btn-primary btn-lg" %>
    <% end %>  
  </div>
  <div class="col-md-1">
  </div>  
</div>
<% else %>
  <div class="center jumbotron">
    <h2>Ｍ＆Ａマッチングシステムへようこそ！</h2>

    <%= link_to "新規会員登録はこちら", root_path, class: "btn btn-lg btn-primary" %>
